{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "jsx": "preserve",
    "composite": true,
    "rootDir": "src",
    "baseUrl": ".",
    "types": []
  },
  "include": ["src"]
}